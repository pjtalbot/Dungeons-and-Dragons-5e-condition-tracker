<% if (messages) { %>
    <%= messages.error %>
<% } %>
<form action="/card/create/<%= character.id %>" method="POST">
    <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name"required>
    </div>
    <div>
        <label for="category">Category</label>
